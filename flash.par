# orders of magnitude less than typical simulation values.
smalle = 1.e7
smallt = 1.e-15
smlrho = 1.e-14
smallp = 1.e-4

# Background fluff parameters.
sim_rhoAmbient = 1.0e-12
sim_pAmbient   = 1.0e-3
