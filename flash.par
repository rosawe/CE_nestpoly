sim_fluffDampCutoff = 2.e-12   # Should be slightly larger than sim_rhoAmbient, 7/1/21 changed from 1e-12
sim_fluffRefineCutoff = 1.e-2  # either rel_to_max or absolute based on refinement_type
sim_totForceSub     = 2

